{
  "permissions": {
    "allow": [
      "mcp__sequential-thinking__sequentialthinking",
      "Bash(uv run pytest:*)",
      "Bash(uv run ruff check:*)",
      "Bash(uv run ruff format:*)",
      "mcp__plugin_oh-my-claudecode_omc-tools__lsp_diagnostics",
      "Bash(uv run ruff:*)",
      "Bash(uv add:*)",
      "Bash(uv run:*)",
      "Bash(gh pr create:*)",
      "Bash(gh pr edit:*)",
      "mcp__context7__resolve-library-id",
      "mcp__context7__query-docs",
      "Bash(uv sync:*)"
    ]
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "context7",
    "playwright",
    "sequential-thinking"
  ],
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/pre-commit-lint.sh",
            "timeout": 30
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/check-task-update.sh",
            "timeout": 10
          }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/post-write-format.sh",
            "timeout": 30
          }
        ]
      }
    ]
  }
}
